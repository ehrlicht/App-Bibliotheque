<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>acceuilServlet1</servlet-name>
        <servlet-class>ch.bibliotheque.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>acceuilServlet1</servlet-name>
        <url-pattern>/main</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/index.html</url-pattern>
        <url-pattern>/index</url-pattern>
        <url-pattern>/index.htm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>menuServlet</servlet-name>
        <servlet-class>ch.bibliotheque.servlet.MenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
            <servlet-name>menuServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>authenticatioServlet</servlet-name>
        <servlet-class>ch.bibliotheque.servlet.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authenticatioServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookListServlet</servlet-name>
        <servlet-class>ch.bibliotheque.servlet.BookListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookListServlet</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>

    <!-- ******************************** -->
    <!-- *** AUTHENTIFICATION AVANCEE *** -->
    <!-- ******************************** -->

    <!-- DEFINITION DES ROLES -->

    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>

    <!--ATTRIBUTION DES ROLES AYANTS DROITS -->

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure ressource</web-resource-name>
            <url-pattern>/secure/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- MISE EN PLACE DE LA METHODE D'AUTHENTIFICATION (FORM) -->

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/WEB-INF/authenticationPage.jsp</form-login-page>
            <form-error-page>/WEB-INF/authenticationPage.jsp</form-error-page>
        </form-login-config>
    </login-config>

</web-app>