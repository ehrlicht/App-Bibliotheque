<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- SERVLET MAPPING -->
    <servlet>
        <servlet-name>mainServlet</servlet-name>
        <servlet-class>ch.bibliotheque.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/index.html</url-pattern>
        <url-pattern>/index</url-pattern>
        <url-pattern>/index.htm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>authenticationServlet</servlet-name>
        <servlet-class>ch.bibliotheque.servlet.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authenticationServlet</servlet-name>
        <url-pattern>/authenticate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addBookServlet</servlet-name>
        <servlet-class>ch.bibliotheque.servlet.AddBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addBookServlet</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeBookServlet</servlet-name>
        <servlet-class>ch.bibliotheque.servlet.RemoveBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeBookServlet</servlet-name>
        <url-pattern>/removeBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookListServlet</servlet-name>
        <servlet-class>ch.bibliotheque.servlet.BookListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookListServlet</servlet-name>
        <url-pattern>/showBooks</url-pattern>
    </servlet-mapping>

    <!-- ERROR HANDLING -->
    <error-page>
        <exception-type>ch.bibliotheque.exceptions.LoginErrorException</exception-type>
        <location>/WEB-INF/error-pages/authentication_error.jsp</location>
    </error-page>

    <error-page>
        <exception-type>ch.bibliotheque.exceptions.MissingFieldsException</exception-type>
        <location>/WEB-INF/error-pages/add_book_error.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error-pages/404.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/WEB-INF/error-pages/500.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.NullPointerException</exception-type>
        <location>/WEB-INF/error-pages/npe.jsp</location>
    </error-page>

</web-app>